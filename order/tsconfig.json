{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": "./",  // Add this line
    "paths": {
      "*": ["src/*"]
      }  // Add this line
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
